{
    "extends": "airbnb",
    "rules": {
        "indent": ["error", 4],
        "react/jsx-filename-extension": [
            "warn", { "extensions": [".js", ".jsx"] }
        ],
        "react/prefer-stateless-function": [
            "warn", { "ignorePureComponents": false }
        ]
    },
    "globals": {
        "Headers": true
    }
}
